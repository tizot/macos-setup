[alias]
    br = branch
    ci = commit
    co = checkout
    # Show the diff between the latest commit and the current state
    d = !"git diff-index --quiet HEAD -- || clear; git --no-pager diff --patch-with-stat"
    # lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%n'
    # '          %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(white)%s%C(reset) %C(bold yellow)%d%C(reset)%n''          %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset) %C(dim white)- %an%C(reset)' --all
    lg = !"git lg1"
    adog = log --all --decorate --oneline --graph
    st = status
    last = log -1 HEAD
[branch]
    autosetuprebase = always
[core]
    attributesfile = ~/.gitattributes
    editor = nvim
    autocrlf = input
    pager = diff-so-fancy | less --tabs=4 -RFX
    excludesfile = /Users/{{ user_name }}/.gitignore_global
	safecrlf = true
[color]
    ui = true
[color "diff-highlight"]
    oldNormal = red
    oldHighlight = red 52
    newNormal = green
    newHighlight = green 22
[color "diff"]
    meta = 227
    frag = magenta bold
    commit = 227 bold
    old = red
    new = green
    whitespace = red reverse
# [filter "clean_ipynb"]
# 	clean = ipynb_drop_output
# 	smudge = /bin/cat
[github]
    user = {{ github_username }}
[pull]
    rebase = true
[push]
    default = upstream
[user]
    name = {{ user_fullname }}
    email = {{ user_email }}
	signingKey = 8167BA55C7FAF792
[credential]
    helper = osxkeychain
[diff]
    renameLimit = 10000
	noprefix = true
[log]
    follow = true
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[commit]
	gpgSign = true
[gpg]
	program = /usr/local/bin/gpg
